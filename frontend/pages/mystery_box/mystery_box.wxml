<!--pages/mystery_box/mystery_box.wxml-->
<view style="padding:10px">
  <view wx:for="{{mystery_box_list}}" wx:for-item="item" wx:key="shop_id"  >
    <view class="my_card">
      <view style="padding-top:10px;height:25px">
        <view style="font-size:18px;font-weight:500;color:#000000;float:left;width:200px;padding-left:20px;">
          {{item.shop_name}}</view>
        <image style="float:right;width:25px;height:25px;padding-right:20px" src="../../images/arrow-right-bold.png" data-shop_id='{{item.shop_id}}' bindtap="to_shop_info">
        </image>
      </view>
      <view style="padding-bottom:15px">
        <view class="menu_item" style="padding-top:8px" wx:for="{{item.mystery_box}}" wx:for-index="index"
          wx:for-item="mystery_box_item" wx:key="product_id">
          <view style="background-color:#f5f5f5;border-radius:10px;">
            <view style="padding:10px;display:flex">
              <image src="{{mystery_box_item.product_pic}}" style="border-radius:10px;width:80px;height:80px"></image>
              <view style="padding-left:10px">
                <view>{{mystery_box_item.product_name}}</view>
                <view style="font-size:13px; font-weight:300;color:#a6a6a6;padding-top:5px">
                  {{mystery_box_item.product_intro}}</view>
                <view style="font-size:10px; font-weight:200;color:#a6a6a6;padding-top:5px">
                  发布日期：{{mystery_box_item.product_pubdate}}</view>
                <view style="display:flex;padding-top:5px">
                  <view style="font-size:15px;color:red">￥{{mystery_box_item.price}}</view>
                </view>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>